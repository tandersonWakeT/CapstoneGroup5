package com.hcl.mapper;

import java.util.Set;

import org.mapstruct.Mapper;

import com.hcl.ecommerce.dto.Purchase;
import com.hcl.ecommerce.entity.Address;
import com.hcl.ecommerce.entity.Customer;
import com.hcl.ecommerce.entity.Order;
import com.hcl.ecommerce.entity.OrderItem;

@Mapper(componentModel = "spring")
public interface PurchaseMapper {
	
	Purchase toPurchase(Customer customer, Address shippingAddress, Address billingAddress, 
			Order order, Set<OrderItem> orderItems);
	
	PurchaseResponse toPurchaseResponse(String orderTrackingNumbe);

}
